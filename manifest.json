{
  "manifest_version": 3,
  "name": "annot",
  "description": "make easy annotations in the browser",
  "version": "1.0",
  "action": {
    "default_popup": "src/tooltip.html",
    "default_icon": "public/icon128.png"
  },
  "icons": {
    "16": "public/icon16.png",
    "32": "public/icon32.png",
    "64": "public/icon64.png",
    "128": "public/icon128.png"
  },
  "permissions": ["tabs"]
}
